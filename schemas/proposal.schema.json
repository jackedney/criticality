{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://criticality.dev/schemas/proposal.schema.json",
  "title": "Specification Proposal",
  "description": "Schema for the structured proposal generated during Ignition synthesis, presented to user for approval",
  "type": "object",
  "required": ["meta", "summary", "features", "architecture"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["version", "generated_at", "project_id"],
      "properties": {
        "version": {
          "type": "string",
          "description": "Proposal version (v1, v2, etc.)",
          "pattern": "^v\\d+$"
        },
        "generated_at": {
          "type": "string",
          "format": "date-time"
        },
        "project_id": {
          "type": "string"
        },
        "interview_state_hash": {
          "type": "string",
          "description": "Hash of interview state at time of synthesis"
        },
        "architect_model": {
          "type": "string",
          "description": "Model that produced this proposal"
        },
        "auditor_model": {
          "type": "string",
          "description": "Model that audited this proposal"
        },
        "supersedes": {
          "type": "string",
          "description": "Previous proposal version this replaces"
        },
        "revision_context": {
          "type": "string",
          "description": "What user feedback prompted this revision"
        }
      }
    },
    "summary": {
      "type": "object",
      "required": ["one_liner", "problem_statement", "target_users", "success_criteria"],
      "properties": {
        "one_liner": {
          "type": "string",
          "description": "Single sentence describing the project",
          "maxLength": 200
        },
        "problem_statement": {
          "type": "string",
          "description": "The problem this project solves"
        },
        "target_users": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "persona": { "type": "string" },
              "needs": { "type": "string" }
            }
          }
        },
        "success_criteria": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "criterion": { "type": "string" },
              "metric": { "type": "string" },
              "target": { "type": "string" }
            }
          }
        },
        "scope_boundaries": {
          "type": "object",
          "properties": {
            "in_scope": {
              "type": "array",
              "items": { "type": "string" }
            },
            "out_of_scope": {
              "type": "array",
              "items": { "type": "string" }
            },
            "future_scope": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      }
    },
    "features": {
      "type": "object",
      "required": ["core"],
      "properties": {
        "core": {
          "type": "array",
          "items": { "$ref": "#/definitions/ProposedFeature" },
          "description": "Must ship in MVP"
        },
        "foundational": {
          "type": "array",
          "items": { "$ref": "#/definitions/ProposedFeature" },
          "description": "Affects architecture, not in MVP"
        },
        "bolt_on": {
          "type": "array",
          "items": { "$ref": "#/definitions/ProposedFeature" },
          "description": "Can add later without refactoring"
        }
      }
    },
    "architecture": {
      "type": "object",
      "required": ["language"],
      "properties": {
        "language": {
          "type": "string",
          "description": "Primary implementation language"
        },
        "language_rationale": {
          "type": "string",
          "description": "Why this language was chosen"
        },
        "platform": {
          "type": "string",
          "enum": ["web_backend", "web_frontend", "web_fullstack", "cli", "desktop", "mobile", "library", "service"]
        },
        "primary_patterns": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Architectural patterns (hexagonal, event-sourced, etc.)"
        },
        "data_storage": {
          "type": "object",
          "properties": {
            "primary": { "type": "string" },
            "rationale": { "type": "string" },
            "alternatives_considered": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "external_integrations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "purpose": { "type": "string" },
              "protocol": { "type": "string" },
              "required": { "type": "boolean" }
            }
          }
        },
        "module_structure": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "responsibility": { "type": "string" },
              "dependencies": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          },
          "description": "High-level module breakdown"
        }
      }
    },
    "constraints": {
      "type": "object",
      "properties": {
        "functional": {
          "type": "array",
          "items": { "$ref": "#/definitions/Constraint" }
        },
        "performance": {
          "type": "array",
          "items": { "$ref": "#/definitions/Constraint" }
        },
        "security": {
          "type": "array",
          "items": { "$ref": "#/definitions/Constraint" }
        },
        "compliance": {
          "type": "array",
          "items": { "$ref": "#/definitions/Constraint" }
        }
      }
    },
    "design_decisions": {
      "type": "array",
      "items": { "$ref": "#/definitions/DesignDecision" },
      "description": "Key decisions made by Architect (especially for delegated areas)"
    },
    "open_questions": {
      "type": "array",
      "items": { "$ref": "#/definitions/OpenQuestion" },
      "description": "Questions requiring user clarification before proceeding"
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "description": { "type": "string" },
          "severity": {
            "type": "string",
            "enum": ["low", "medium", "high"]
          },
          "mitigation": { "type": "string" }
        }
      },
      "description": "Identified risks and mitigations"
    },
    "auditor_notes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "concern": { "type": "string" },
          "architect_response": { "type": "string" },
          "resolved": { "type": "boolean" }
        }
      },
      "description": "Concerns raised by auditor during synthesis"
    }
  },
  "definitions": {
    "ProposedFeature": {
      "type": "object",
      "required": ["id", "name", "description"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^f\\d+$"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "rationale": {
          "type": "string",
          "description": "Why classified in this category"
        },
        "user_stories": {
          "type": "array",
          "items": { "type": "string" }
        },
        "acceptance_criteria": {
          "type": "array",
          "items": { "type": "string" }
        },
        "dependencies": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Other feature IDs this depends on"
        },
        "architectural_impact": {
          "type": "string",
          "description": "How this affects system architecture (for foundational features)"
        },
        "complexity_estimate": {
          "type": "string",
          "enum": ["trivial", "simple", "moderate", "complex", "very_complex"]
        }
      }
    },
    "Constraint": {
      "type": "object",
      "required": ["id", "description"],
      "properties": {
        "id": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "source": {
          "type": "string",
          "enum": ["user_explicit", "inferred", "best_practice", "regulatory"],
          "description": "Where this constraint came from"
        },
        "testable": {
          "type": "boolean"
        },
        "verification_method": {
          "type": "string",
          "description": "How this will be verified"
        }
      }
    },
    "DesignDecision": {
      "type": "object",
      "required": ["id", "area", "decision", "rationale"],
      "properties": {
        "id": {
          "type": "string"
        },
        "area": {
          "type": "string",
          "description": "What aspect of design this covers"
        },
        "decision": {
          "type": "string",
          "description": "The decision made"
        },
        "rationale": {
          "type": "string",
          "description": "Why this decision was made"
        },
        "alternatives_considered": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "option": { "type": "string" },
              "rejected_because": { "type": "string" }
            }
          }
        },
        "delegated": {
          "type": "boolean",
          "description": "Whether this was in a delegated area"
        },
        "user_notes_considered": {
          "type": "string",
          "description": "User delegation notes that influenced this"
        }
      }
    },
    "OpenQuestion": {
      "type": "object",
      "required": ["id", "question"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^q\\d+$"
        },
        "question": {
          "type": "string"
        },
        "context": {
          "type": "string",
          "description": "Why this question matters"
        },
        "options": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "option": { "type": "string" },
              "implications": { "type": "string" }
            }
          }
        },
        "architect_recommendation": {
          "type": "string",
          "description": "What the Architect would choose if user doesn't specify"
        },
        "blocking": {
          "type": "boolean",
          "default": false,
          "description": "Whether this must be answered before proceeding"
        }
      }
    }
  }
}
